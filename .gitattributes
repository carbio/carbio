# Auto detect text files and perform LF normalization
*                                           text=auto
# Source files
*.cpp                                       text diff=cpp
*.hpp                                       text diff=cpp
*.ipp                                       text diff=cpp
*.tpp                                       text diff=cpp
*.py                                        text diff=python
# Precompiled Headers
*.gch                                       binary
*.pch                                       binary
# Scripts
*.bash                                      text eol=lf
*.sh                                        text eol=lf
# These are explicitly windows files and should use crlf
*.bat                                       text eol=crlf
*.cmd                                       text eol=crlf
*.ps1                                       text eol=crlf
# Documents
*.bibtex                                    text diff=bibtex
*.md                                        text diff=markdown
*.tex                                       text diff=tex
# Serialisation
*.conf                                      text
*.json                                      text
*.ini                                       text
*.toml                                      text
*.xml                                       text
*.yaml                                      text
*.yml                                       text
# Text files where line endings should be preserved
*.patch                                     -text
# Exclude files from exporting
.gitattributes                              export-ignore
.gitignore                                  export-ignore
.gitkeep                                    export-ignore
